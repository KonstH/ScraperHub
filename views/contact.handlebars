<section class="contact mt-5">
  <h1 class="contact--title">Send me some feedback</h1>
  <form action="https://formspree.io/mzbjjgyo" method="POST" class="mt-5">
    <div class="form-group">
      <label for="emailInput">Email address</label>
      <input type="email" name="_replyto" class="form-control" id="emailInput" placeholder="name@example.com" required>
    </div>
    <div class="form-group">
      <label for="textInput">Your feedback</label>
      <textarea class="form-control" name="name" id="textInput" rows="3" placeholder="Enter some ideas or suggestions..."required></textarea>
    </div>
    <input type="submit" class="btn btn-primary" value="Send">
  </form>
</section>

